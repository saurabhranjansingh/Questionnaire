@model Questionnaire.Models.QuestionnaireMaster

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Are you sure you want to delete this Questionnaire?</h3>
<div>

    <div class="row">
        <div class="col-sm-12">
            <h4 class="text-primary">@Html.DisplayFor(model => model.Name)</h4>
        </div>
    </div>
    <div class="row" style="margin-top: 70px">
        <div class="col-sm-12">
            <div><b><i class="fa fa-exclamation-triangle text-danger"></i>&nbsp;Warning:</b>&nbsp;All the questions associated with this Questionnaire will also be deleted and can not be recovered later. If you want to disable this Questionnaire temporarily you can mark it as Inactive.</div>
        </div>
    </div>

    <div class="row" style="margin-top: 30px">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-success" })
            </div>
        }
    </div>
    
</div>
