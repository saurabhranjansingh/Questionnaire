@model Questionnaire.ViewModels.EditQuestionnaireViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Edit Questionnaire</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 control-label">
                    <label for="QnnrText">Name</label>
                </div>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control", @id = "QnnrText"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-sm-2 control-label">
                    <label for="chkIsActive">Is Active</label>
                </div>
                <div class="col-sm-10" style="padding-top: 4px;">
                    @Html.CheckBoxFor(model => model.IsActive, new { @class = "checkbox", @id = "chkIsActive" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success pull-right" style="margin-left: 15px;" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary pull-right" })
            </div>
        </div>
    </div>
}

<div class="row" style="margin-top: 30px;">
    <div class="col-sm-offset-2 col-sm-8">
        <b>@ViewBag.QuesCountMsg</b>
    </div>
</div>

<div class="row" style="margin-top: 20px;">
    <div class="col-sm-offset-2 col-sm-8">
        @Html.ActionLink("View / Edit Questions", "Index", "Question", new { id = Model.ID }, new { @class = "btn btn-info" })
    </div>
</div>

