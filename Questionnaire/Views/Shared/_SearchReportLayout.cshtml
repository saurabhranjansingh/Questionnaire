
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Questionnaire - Search Report</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/AdminStyle.css" rel="stylesheet" />
    @*<link href="~/Content/Fillup.css" rel="stylesheet" />*@
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="page-top">
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsable-navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/Home">Sample Quiz</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="collapsable-navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Discard", "Index")</li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <section>
        <div class="container">
            <div class="row text-center">
                <h3 class="text-primary">Search Report</h3>
                <hr />
            </div>

            <form id="SearchForm">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-offset-2 col-lg-8">
                            <div class="panel panel-default">
                                <div class="panel-heading">Basic Information</div>
                                <div class="panel-body">
                                    <div class="form-horizontal">

                                        @*Field 1 : Date of Call*@
                                        <div class="row BasicInputRow form-group required">
                                            <div class="col-sm-2 control-label">
                                                <label for="DateOfCall">Date of Call</label>
                                            </div>
                                            <div class="col-sm-2 control-label">
                                                <label for="StartDate">Start Date</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="input-group" id="startDate">
                                                    <input id="startDateField" name="bif1" class="form-control UserInputBasic" placeholder="MM/DD/YYYY" type="text" required />
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-sm-2 control-label">
                                                <label for="EndDate">End Date</label>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="input-group" id="endDate">
                                                    <input id="endDateField" name="bif1" class="form-control UserInputBasic" placeholder="MM/DD/YYYY" type="text" required />
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>

                                        @*Field 2 : Company*@
                                        <div class="row BasicInputRow form-group required">
                                            <div class="col-sm-offset-1 col-sm-3 control-label">
                                                <label for="BasicInputField2">Company</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <input id="BasicInputField2" name="bif2" class="form-control UserInputBasic" type="text" maxlength="100" required />
                                            </div>
                                        </div>

                                        @*Field 3 : Client Lead*@
                                        <div class="row BasicInputRow form-group required">
                                            <div class="col-sm-offset-1 col-sm-3 control-label">
                                                <label for="BasicInputField3">Client Lead</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <input id="BasicInputField3" name="bif3" class="form-control UserInputBasic" type="text" maxlength="100" required />
                                            </div>
                                        </div>

                                        @*Field 4 : Deltek Sales Lead*@
                                        <div class="row BasicInputRow form-group required">
                                            <div class="col-sm-offset-1 col-sm-3 control-label">
                                                <label for="BasicInputField4">Deltek Sales Lead</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <input id="BasicInputField4" name="bif4" class="form-control UserInputBasic" type="text" maxlength="100" required />
                                            </div>
                                        </div>

                                        @*Field 5 : Infotek Lead*@
                                        <div class="row BasicInputRow form-group required">
                                            <div class="col-sm-offset-1 col-sm-3 control-label">
                                                <label for="BasicInputField5">Infotek Lead</label>
                                            </div>
                                            <div class="col-sm-6">
                                                <input id="BasicInputField5" name="bif5" class="form-control UserInputBasic" type="text" maxlength="100" required />
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top: 30px;">
                                            <div class="col-lg-11">
                                                <div class="btn btn-success pull-right" onclick="submitForm();">Search</div>
                                            </div>
                                        </div>
                                        @*<div class="row">
                                                <div class="pull-right" style="font-size: small">
                                                    <span class="text-primary">*</span><span style="margin-right: 20px;">&nbsp;required fields</span>
                                                </div>
                                            </div>*@

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                }

                @RenderBody()

            </form>

        </div>
    </section>



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.fittext.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Custom/Report.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqgrid/4.6.0/css/ui.jqgrid.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqgrid/4.6.0/js/i18n/grid.locale-en.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqgrid/4.6.0/js/jquery.jqGrid.min.js"></script>
    <link href="~/Content/themes/base/jquery.ui.theme.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
    <script type="text/javascript">
        function submitForm() {
            console.log("validating..");
            $("#tblJQGrid").jqGrid("clearGridData", true).GridUnload();
            searchReports();
        }

        $(function() {
            $('.date').datetimepicker({ format: "MM/DD/YYYY" });
            $('#DateOfCall').datetimepicker({ format: "MM/DD/YYYY" });
        });

    </script>

</body>
</html>
