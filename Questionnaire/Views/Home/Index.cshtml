@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefLayout.cshtml";
}

<header>
    <div class="header-content">
        <div class="header-content-inner">
            @{
                if (ViewBag.NoQnnrExist == false)
                {
                    <h3>Welcome!</h3>
                    <hr>
                    <h3>Choose a Questionnaire to proceed.</h3>
                    <div class="row" style="margin: 30px 0 60px 0;">
                        <div class="col-md-offset-2 col-md-8">
                            @Html.DropDownList("QuestionnaireList", null, new {@class = "form-control", @id="QnnrListDropDown"})
                        </div>
                    </div>
                    <div id="Go" class="btn btn-primary btn-xl page-scroll">Start Questionnaire</div>
                }
                else
                {
                    <h3>Sorry!</h3>
                    <hr>
                    <h3>No Questionnaire has been setup yet.</h3>
                    <p>Please contact the admin of this application for any help.</p>
                }
            }
        </div>
    </div>
</header>


