@model Questionnaire.Models.LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefLayout.cshtml";
}

<header>
    <div class="header-content">
        <div class="header-content-inner">

            @using (Html.BeginForm("PerformLogin", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          
                <div class="form-group">                   
                    <div class="col-md-offset-3 col-md-6">
                        <div class="col-sm-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <input type="submit" value="Log in" class="btn btn-success pull-left" style="border-radius : 1px;" />
                        </div>
                        
                        @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                       
                    </div>
                </div>
              
                <div class="row" style="padding-top:90px;">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.ActionLink("Go Back", "Index", "Home", new { @class = "btn btn-primary" })
                    </div>
                </div>
            }
        </div>
    </div>
</header>

