@model Questionnaire.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefLayout.cshtml";
}

<header>
    <div class="header-content">
        <div class="header-content-inner">

            @using (Html.BeginForm("PerformLogin", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6">
                            <div class="col-sm-8">
                                <p class="pull-left" style="margin-bottom: 10px !important">Enter the admin password</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6">
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.Password, new { @id="pwd", @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="col-sm-4">
                                <input type="submit" value="Log in" class="btn btn-success pull-left" style="border-radius: 3px;" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-md-offset-3 col-md-6">
                            <div class="col-md-8">
                                <div class="pull-right">@Html.ValidationMessageFor(m => m.Password, String.Empty)</div>
                                <div class="pull-right">@Html.ValidationMessage("INVALID_PWD")</div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6" style="padding-top: 60px;">
                            <div class="col-sm-3">
                                @Html.ActionLink("Go Back", "Index", "Home", null, new { @class = "btn btn-primary pull-left", @style = "border-radius : 3px;" })
                            </div>

                        </div>
                    </div>

                </div>

            }
        </div>
    </div>
</header>
