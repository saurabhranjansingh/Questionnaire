@model Questionnaire.Models.Question

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Are you sure you want to delete this ?</h3>
<div style="margin-top: 30px;">
    <dl class="dl-horizontal">
        <dt class="text-info">
            Text
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuesText)
        </dd>
        <dt class="text-info">
           Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuestionType1.QuesType)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div>
            <input type="submit" value="Delete" class="btn btn-primary"/>
            @Html.ActionLink("Cancel", "Index", new { id = Model.QuestionnaireID }, new { @class = "btn btn-success" })
        </div>
    }
</div>
